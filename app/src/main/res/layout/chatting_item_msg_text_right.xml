<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/sendmessage_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2014/10/10"
        android:gravity="center"
        android:layout_marginTop="6dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginRight="6dp"
        >
        <ImageView
            android:id="@+id/sendmessage_user"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_weight="1111"
            android:src="@mipmap/default_icon_user"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"
            />
        <TextView
            android:id="@+id/tv_msg_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/sendmessage_user"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="asdfasdfasdfasdfasdfsdfadfadfasdfasfsdfadffadasdasdasd"
            android:background="@drawable/dialogue_detail_right"
            />

    </RelativeLayout>
</LinearLayout>
